@using BlazorStatic
@using BlazorStatic.Services
@inherits LayoutComponentBase
@inject BlazorStaticContentService<PageFrontMatter> BlazorStaticContentService

<header>
    <section>
        <brand>
            <a href="/">
                <Logo/>
            </a>
        </brand>
        <button onclick="window.nav.open();" aria-label="Open menu button">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px">
                <path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/>
            </svg>
        </button>
    </section>
</header>
<nav>
    <section>
        <header>
            <brand>
                <a href="/">
                    <Logo/>
                </a>
            </brand>
            <button onclick="window.nav.close();" aria-label="Close menu button">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px">
                    <path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/>
                </svg>
            </button>
        </header>
        <menu>
            @foreach (Post<PageFrontMatter> post in _menuItems.OrderBy(x => x.FrontMatter.Order))
            {
                <li>
                    <NavLink href="@($"{BlazorStaticContentService.Options.PageUrl}/{post.Url}")">
                        @post.FrontMatter.Title
                    </NavLink>
                </li>
            }
        </menu>
    </section>
</nav>
<main>
    <CascadingValue Name="Posts" Value="_posts">
        @Body
    </CascadingValue>
</main>
<footer>
    <address>

    </address>
</footer>

@code {
    List<Post<PageFrontMatter>> _posts = [];
    List<Post<PageFrontMatter>> _menuItems = [];

    protected override void OnInitialized()
    {
        _posts = BlazorStaticContentService.Posts;
        _menuItems = _posts.Where(x => x.FrontMatter.IsMenuItem).ToList();

        base.OnInitialized();
    }

}
